{
    "name": "blomstra/flarum-redis",
    "description": "Adds Redis cache and queue to Flarum",
    "keywords": [
        "extension",
        "flarum", "blomstra",
        "queue", "cache", "redis"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "DaniÃ«l Klabbers",
            "email": "daniel@klabbers.email",
            "homepage": "http://luceos.com"
        }
    ],
    "support": {
        "issues": "https://github.com/blomstra/flarum-redis/issues",
        "source": "https://github.com/blomstra/flarum-redis",
        "forum": "https://discuss.flarum.org/d/21873"
    },
    "homepage": "https://blomstra.net",
    "require": {
        "flarum/core": "^1.0.0",
        "illuminate/redis": "*",
        "predis/predis": "*"
    },
    "autoload": {
        "psr-4": {
            "Blomstra\\Redis\\": "src/"
        }
    },
    "replace": {
        "bokt/flarum-redis": "*"
    },
    "extra": {
        "flarum-extension": {
            "title": "Redis",
            "icon": {
                "image": "resources/logo.svg",
                "backgroundColor": "#ffffff",
                "color": "#3a98d0",
                "backgroundSize": "90%",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center"
            }
